<!-- Post Header -->
<style type="text/css">
    <%if (is_post()){%>
            html {
                height:100%;
            }
            @media screen and (min-width:960px){ 
				header.intro-header{height: 624px;}
			}
            /*post*/
    <%}%>
    header.intro-header{
        position: relative;
        width: 100%;
        <% if (is_home()) { %>
            background-image: url('<%= config["header-img"] %>') 
            /*config*/
        <%} else if (is_post()){%>
            background-image: url('<%= page["header-img"] ? page["header-img"] : config["default-img"] %>');
            /*post*/
        <%} else {%>
            background-image: url('<%= page["header-img"] %>')
            /*page*/
        <%} %>
    }
    

    <% if (config.signature) {%>
    #signature{
        background-image: url('<%= config["signature-img"] %>');
    }
    <%}%>
</style>
 <%if(page.title == "About"){%>
         <%- css('css/timeline.min.css') %>
         <style type="text/css">
         	header{
           		background-image: url('<%= config["about-bg"] %>')
         	}
         </style>
            <div class="container" style="margin:0;padding:0;width:100%;">
            <header>
                <img width="175" height="175" style="border-radius:50%;" src="<%=config['about-avatar']%>">
                <h1><%=config['about-name']%></h1>
                <p><%=config['about-desc']%></p>
            </header>
            <div class="main">
                <%- partial('_partial/about') %>
            </div>
        </div>
<%}else{%>
<header class="intro-header" >
    <!-- Signature -->
    <div id="signature">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <% if (is_post()) { %>
                    <div class="post-heading">
                        <div class="tags">
                            <% page.tags.forEach(function(tag){ %>
                              <a class="tag" href="<%= config.root %>tags/#<%= tag.name %>" title="<%= tag.name %>"><%= tag.name %></a>
                            <% }) %>
                        </div>
                        <h1><%= page.title %></h1>
                        <h2 class="subheading"><%= page.subtitle || "" %></h2>
                        <span class="meta">
                            Posted by <%- page.author || config.author %> on
                            <%= page.date.format(config.date_format) %>
                        </span>
                    </div>
                <% } else { %>
                    <div class="site-heading">
                        <h1><%= page.title || config.title %></h1>
                        <!--<hr class="small">-->
                        <span class="subheading"><%= page.description || config.subtitle || "" %>
                        </span>
                    </div>
                <% } %>


                </div>

            </div>
           
        </div>
    </div>
</header>
<%}%>